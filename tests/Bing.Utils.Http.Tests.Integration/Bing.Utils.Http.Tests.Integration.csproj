		<PackageReference Include="Microsoft.AspNetCore.TestHost" Version="6.0.25" />
		<PackageReference Include="Xunit.DependencyInjection" Version="8.7.0" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net7.0' ">
