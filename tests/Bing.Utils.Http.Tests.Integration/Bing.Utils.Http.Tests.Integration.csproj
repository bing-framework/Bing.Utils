	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\src\Bing.Utils.Http\Bing.Utils.Http.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Resources\a.png">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
